<div class="container mt-4">
    <h2 class="mb-4">ðŸ”„ Batch Job Dashboard</h2>
    <table class="table table-bordered">
        <thead class="table-dark">
        <tr>
            <th>Instance ID</th>
            <th>Job Name</th>
            <th>Executions</th>
            <th>Status</th>
            <th>Exit Code</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <tr th:each="instance : ${instanceList}">
            <td th:text="${instance['instanceId']}"></td>
            <td th:text="${instance['jobName']}"></td>
            <td colspan="6" th:if="${#lists.isEmpty(instance['executions'])}">No Executions</td>
        </tr>
        <tr th:each="exec : ${instance['executions']}">
            <td colspan="2"></td>
            <td th:text="${exec['executionId']}"></td>
            <td>
                <span th:if="${exec['status']} == 'COMPLETED'" class="badge bg-success" th:text="${exec['status']}"></span>
                <span th:if="${exec['status']} == 'FAILED'" class="badge bg-danger" th:text="${exec['status']}"></span>
                <span th:if="${exec['status']} == 'STARTED'" class="badge bg-warning text-dark" th:text="${exec['status']}"></span>
                <span th:unless="${exec['status']} == 'COMPLETED' or exec['status'] == 'FAILED' or exec['status'] == 'STARTED'" 
                      class="badge bg-secondary" th:text="${exec['status']}"></span>
            </td>
            <td th:text="${exec['exitCode']} ?: '-' "></td>
            <td th:text="${exec['startTime']} ?: '-' "></td>
            <td th:text="${exec['endTime']} ?: '-' "></td>
            <td>
                <form th:action="@{'/job/stop/' + ${exec['executionId']}}" method="post">
                    <button type="submit" class="btn btn-sm btn-outline-danger"
                            th:disabled="${exec['status']} != 'STARTED' and ${exec['status']} != 'STARTING'">
                        Stop
                    </button>
                </form>
            </td>
        </tr>
        </tbody>
    </table>

    <h4 class="mt-5">ðŸš€ Launch New Batch Job</h4>
