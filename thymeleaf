    <h2 class="mb-4">ðŸ”„ Batch Job Dashboard</h2>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
        <tr>
            <th>Job Name</th>
            <th>Execution ID</th>
            <th>Status</th>
            <th>Exit Code</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <tr th:each="item : ${instanceList}">
            <td th:text="${item['jobName']}"></td>
            <td th:text="${item['executionId']}"></td>

            <td>
                <span th:if="${item['status']} == 'COMPLETED'" class="badge bg-success" th:text="${item['status']}"></span>
                <span th:if="${item['status']} == 'FAILED'" class="badge bg-danger" th:text="${item['status']}"></span>
                <span th:if="${item['status']} == 'STARTED'" class="badge bg-warning text-dark" th:text="${item['status']}"></span>
                <span th:if="${item['status'] != 'COMPLETED' and item['status'] != 'FAILED' and item['status'] != 'STARTED'}" class="badge bg-secondary" th:text="${item['status']}"></span>
            </td>

            <td th:text="${item['exitCode']}"></td>
            <td th:text="${item['startTime']}"></td>
            <td th:text="${item['endTime']}"></td>

            <td>
                <form th:action="@{'/job/stop/' + ${item['executionId']}}" method="post">
                    <button type="submit" class="btn btn-sm btn-outline-danger"
                            th:disabled="${item['status']} != 'STARTED' and ${item['status']} != 'STARTING'">Stop</button>
                </form>
            </td>
        </tr>
        </tbody>
    </table>

