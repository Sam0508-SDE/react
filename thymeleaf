    <table class="table table-bordered table-striped">
        <thead class="table-dark">
        <tr>
            <th>Job Name</th>
            <th>Executions</th>
            <th>Status</th>
            <th>Exit Code</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <tr th:each="instance : ${instanceList}">
            <td th:text="${instance.jobName}" rowspan="${#lists.size(instance.executions)}"></td>
            <td colspan="6" th:if="${#lists.isEmpty(instance.executions)}">No Executions</td>

            <tr th:each="exec : ${instance.executions}">
                <td th:text="${exec.executionId}"></td>
                <td>
                    <span th:switch="${exec.status}">
                        <span th:case="'COMPLETED'" class="badge bg-success" th:text="${exec.status}"></span>
                        <span th:case="'FAILED'" class="badge bg-danger" th:text="${exec.status}"></span>
                        <span th:case="'STARTED'" class="badge bg-warning text-dark" th:text="${exec.status}"></span>
                        <span th:case="*" class="badge bg-secondary" th:text="${exec.status}"></span>
                    </span>
                </td>
                <td th:text="${exec.exitCode}"></td>
                <td th:text="${exec.startTime}"></td>
                <td th:text="${exec.endTime}"></td>
                <td>
                    <form th:action="@{'/job/stop/' + ${exec.executionId}}" method="post">
                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                th:disabled="${exec.status} != 'STARTED'">Stop</button>
                    </form>
                </td>
            </tr>
        </tr>
        </tbody>
    </table>

