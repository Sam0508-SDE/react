<select id="tableDropdown" name="tableName" onchange="populateFields()">
    <option value="">Select table</option>
    <th:block th:each="t : ${tables}">
        <option th:value="${t}" th:text="${t}"></option>
    </th:block>
</select>

<input type="text" id="sourceColumn" name="sourceColumn">
<input type="text" id="destinationColumn" name="destinationColumn">
<input type="text" id="primaryKey" name="primaryKey">


<script th:inline="javascript">
    const configMap = /*[[${configMap}]]*/ {};

    function populateFields() {
        const selected = document.getElementById("tableDropdown").value;
        const config = configMap[selected];

        if (config) {
            document.getElementById("sourceColumn").value = config.sourceColumn;
            document.getElementById("destinationColumn").value = config.destinationColumn;
            document.getElementById("primaryKey").value = config.primaryKey;
        }
    }
</script>


<tr th:each="entry : ${tableStats}">
    <td th:text="${entry.key}"></td>
    <td th:text="${entry.value.converted}"
        th:class="${entry.value.converted == 0} ? 'text-danger' :
                  (entry.value.remaining == 0) ? 'text-success' : 'text-warning'"></td>
    <td th:text="${entry.value.remaining}"></td>
</tr>


<td th:text="${entry.value.remaining}" 
    th:class="${entry.value.remaining == 0} ? 'text-success' :
              (${entry.value.converted == 0} ? 'text-danger' : 'text-warning')">
</td>
